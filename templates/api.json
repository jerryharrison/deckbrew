{
  "variables": {
    "deckbrew_password": "{{env `DATABASE_PASSWORD`}}",
    "deckbrew_src": "/usr/local/gopath/src/github.com/kyleconroy/deckbrew-api"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-west-1",
      "source_ami": "ami-c45f6281",
      "instance_type": "t1.micro",
      "ssh_username": "ubuntu",
      "ami_name": "Deckbrew API {{isotime | clean_ami_name}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo sh '{{ .Path }}'",
      "inline": [

        "mkdir -p {{user `deckbrew_src`}}",
        "chmod -R 777 {{user `deckbrew_src`}}"
      ]
    },
    {
      "type": "file",
      "source": "deckbrew/",
      "destination": "{{user `deckbrew_src`}}" 
    },
    {
      "type": "ansible-local",
      "playbook_file": "provisioning/api.yml"
      "extra_arguments": {
        "deckbrew": {
          "password": "{{user  `deckbrew_password`}}"
        }
    }
  ]
}
